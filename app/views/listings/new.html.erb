<h1>Create a Listing</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@listing) do |f| %>

      <%= f.label :listing %>
      <%= f.text_field :listing, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

	  <%= f.label :hourly_pay %>
	  <%= f.text_field :hourly_pay, class: 'form-control' %>
	  
	  <%= f.label :work_date %>
	  <%= f.date_field :work_date, class: 'form-control' %>
      	  
      <%= f.submit "Post Listing", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
